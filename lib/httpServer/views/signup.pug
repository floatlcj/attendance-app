extends ./layout.pug

block content
    section.hero.is-medium.has-background-black.has-text-centered
        .hero-body 
            .container
                h1.title.is-1.has-text-white Welcome
                h2.subtitle.is-3.has-text-white Create a wallet to get started
    section.section.has-background-black.is-fullheight
        if error
            .block
                .container
                    .columns.is-centered
                        .column.is-one-third
                            .notification.is-danger.has-text-centered(id="error") 
                                .button.delete(onclick="toggle_visibility('error')")
                                |#{error}
        .container.is-max-tablet
            form.field.has-addons.has-addons-centered(method="POST", action="/signup")
                .control(style="width: 60%")
                    input.input(type="password", name="password", placeholder="Enter your password", required, style="width: 100%")
                .control
                    button.button.is-primary(type="submit", style="width=100%") Create Wallet